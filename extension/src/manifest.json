{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/utils/chromereload.js",
      "scripts/background/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "*://www.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/*"
      ],
      "css": [
        "styles/content/trackedWebsite.css"
      ],
      "js": [
        "scripts/content/trackedWebsite.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "*://localhost/*"
      ],
      "js": [
        "scripts/content/timed.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Timed",
    "default_popup": "popup.html"
  }
}
